{
  "name": "reiwa-no-tora-screening",
  "version": "1.0.0",
  "description": "志願者が動画で質問に回答し、AIが自動評価を行う選考システム",
  "private": true,
  "workspaces": [
    "server",
    "client"
  ],
  "scripts": {
    "dev": "concurrently \"pnpm --filter server dev\" \"pnpm --filter client dev\"",
    "build": "pnpm --filter server build && pnpm --filter client build",
    "start": "pnpm --filter server start",
    "db:generate": "pnpm --filter server db:generate",
    "db:push": "pnpm --filter server db:push",
    "db:seed": "pnpm --filter server db:seed"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
